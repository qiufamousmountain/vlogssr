<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%=title%>
    </title>
    <meta name="keywords" content="<%=keywords%>" />
    <meta name="description" content="<%=description%>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://www.siteluo7.com/images/favicon.ico" type="image/x-icon">

    <link href="/style/detail.css" rel="stylesheet">

</head>

<body>
    <!--top begin-->
    <article>
        <%include nav1.ejs%>
        <div class="box_l">
            <div class="weizhi">您现在的位置是：<a href="https://www.siteluo7.com/">首页</a>&nbsp;>&nbsp;
                <a href="https://www.siteluo7.com/list?column=<%=column%>">
                    <%=column%>
                </a>&nbsp;>&nbsp;
                <a href="https://www.siteluo7.com/A-<%=_id%>">
                    <%=title%>
                </a>
            </div>
            <div class="container">
                <h1>
                    <%=title%>
                </h1>
                <div class="info"><span>作者：
            <%=editor%>
          </span><span>日期：
            <%=ctime%>
          </span>
                </div>
                <div class="content">
                    <%-content%>
                        <div class="pagelist"></div>
                </div>
               
            </div>
            <div class="info-pre-next">
                <p>上一篇:
                    <a href="<%=pre?domain+'/A-'+pre._id:'/' %>">
                        <%=pre?pre.title:'返回首页' %>
                    </a>
                </p>
                <p>下一篇:
                    <a href="<%=nex?domain+'/A-'+nex._id:'/' %>">
                        <%=nex?nex.title:'返回首页' %>
                    </a>
                </p>
            </div>

            <div class="otherlink">
                <h2 class="news_t">相关文章</h2>
                <ul>
                    <% olist.forEach(function(item){%>
                        <li>
                            <a href="https://www.siteluo7.com/A-<%=item._id%>" title="<%=item.title %>">
                                <%=item.title %>
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
        <%include aside.ejs%>

    </article>
    <%include footer.ejs%>

</body>

</html>