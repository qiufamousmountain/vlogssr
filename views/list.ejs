<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%=title%>
    </title>
    <meta name="keywords" content="<%=keywords%>" />
    <meta name="description" content="<%=description%>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="<%=domain%>/images/favicon.ico" type="image/x-icon">
    <link href="/style/detail.css" rel="stylesheet">
</head>

<body>
    <!--top begin-->
    <article>
        <nav>
            <div class="topnav">
                <a href="<%=domain%>/" class="logo">
                    <h1 style="height: 50px;line-height: 50px;font-size: 26px;">飞享喜悦</h1>
                </a>
                <ul id="starlist">
                    <li><a class="<%-column=='推广'?'selected':0%>" href="<%=domain%>/list?column=推广">推广</a></li>
                    <li><a class="<%-column=='运营'?'selected':0%>" href="<%=domain%>/list?column=运营">运营</a></li>
                    <li><a class="<%-column=='营销'?'selected':0%>" href="<%=domain%>/list?column=营销">营销</a></li>
                    <li><a class="<%-column=='热门新闻'?'selected':0%>" href="<%=domain%>/list?column=热门新闻">热门新闻</a></li>
                </ul>
            </div>
            <span></span>
        </nav>
        <div class="box_l">
            <div class="weizhi">您现在的位置是：<a href="<%=domain%>/">首页</a>&nbsp;>&nbsp;
                <a href="<%=domain%>/list?column=<%=column%>/">
                    <%=column%>
                </a>
            </div>
            <ul class="news_list">

                <% list.forEach(function(item){%>
                    <a href="<%=domain%>/A-<%=item._id%>" title="<%=item.title %>" target="_blank">
                        <h2>
                            <%=item.title %>
                        </h2>
                        <li>

                            <p class="news_list_info">
                                <%=item.description %>
                            </p>
                            <p class="news_list_time"><span><a href="<%=domain%>/A-<%=item._id%>"
                target="_blank"><%=item.column %></a></span><span>日期：<%=item.ctime%></span></p>
                        </li>
                    </a>
                    <% }) %>
            </ul>

            <div class="otherlink">
                <h2 class="news_t">相关文章</h2>
                <ul>
                    <% olist.forEach(function(item){%>
                        <li>
                            <a href="<%=domain%>/A-<%=item._id%>" title="<%=item.title %>">
                                <%=item.title %>
                            </a>
                        </li>
                        <% }) %>

                </ul>
            </div>
        </div>
        <aside class="box_r">
            <div class="search">
                <form action="<%=domain%>/e/search/index.php" method="post" name="searchform" id="searchform">
                    <input name="keyboard" id="keyboard" class="input_text" value="搜寻你的博客之路" style="color: rgb(153, 153, 153);" onfocus="if(value=='搜寻你的博客之路'){this.style.color='#000';value=''}" onblur="if(value==''){this.style.color='#999';value='搜寻你的博客之路'}" type="text">
                    <input name="show" value="title" type="hidden">
                    <input name="tempid" value="2" type="hidden">
                    <input name="tbname" value="news" type="hidden">
                    <input name="classid" value="1" type="hidden">
                    <input name="Submit" class="input_submit" value="搜索" type="submit">
                </form>
            </div>
            <section>
                <h2>站长推荐</h2>
                <ul class="news_part03">
                    <% hlist.forEach(function(item){%>
                        <li>
                            <a href="<%=domain%>/A-<%=item._id%>" title="<%=item._id%>" target="_blank">
                                <p>
                                    <%=item.title%>
                                </p>
                            </a>
                        </li>
                        <% }) %>

                </ul>
            </section>

        </aside>
    </article>
    <%include footer.ejs%>

</body>

</html>